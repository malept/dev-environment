-- vim: set ft=sql :
-- -*- coding: utf-8 -*-

-- Show NULLs
\pset null ¤NULL¤
-- SQL keywords complete as uppercase
\set COMP_KEYWORD_CASE upper
-- history per-DB
\set HISTFILE ~/.cache/psql/ :DBNAME .history
\set ON_ERROR_ROLLBACK interactive
-- Prompt: (transaction?)(user)@(host):(database)(connection_status)(user_type)
\set PROMPT1 '%[%033[33;1m%]%x%[%033[0m%]%[%033[1;33;40m%]%n@%M%[%033[0m%]:%[%033[1;31;40m%]%/%[%033[0m%]%R%# '
\set PROMPT2 '… # '

\timing on
